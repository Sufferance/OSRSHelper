<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infonuascape.osrshelper"
    android:versionCode="6"
    android:versionName="1.2.2" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.infonuascape.osrshelper.MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.infonuascape.osrshelper.UsernameActivity"
            android:label="@string/title_activity_username" >
        </activity>
        <activity
            android:name="com.infonuascape.osrshelper.HighScoreActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" >
        </activity>
        <activity
            android:name="com.infonuascape.osrshelper.XPTrackerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" >
        </activity>
        <activity
            android:name="com.infonuascape.osrshelper.CombatCalcActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" >
        </activity>
        <activity
            android:name="com.infonuascape.osrshelper.WorldMapActivity"
            android:label="@string/title_activity_world_map" >
        </activity>
    </application>

</manifest>